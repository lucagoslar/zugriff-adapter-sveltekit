{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"]
		},
		"rootDirs": ["./src"],
		"types": ["node", "jest", "ts-jest"],
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
